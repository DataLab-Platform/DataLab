    "version": "2.0.0",
    "tasks": [
        {
            "label": "gettext - Scan",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "gettext_scan.bat"
            ],
            "options": {
                "cwd": "scripts",
                "env": {
                    "UNATTENDED": "1",
                    "PYTHON": "${env:CDL_PYTHONEXE}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "gettext - Compile",
            "type": "shell",
            "command": "cmd",
