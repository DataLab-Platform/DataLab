        {
            "label": "Run Ruff Formatter",
            "command": "ruff",
            "args": [
                "format"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "echo": true,
                "focus": false,
                "panel": "dedicated",
                "reveal": "always",
                "showReuseMessage": true
            },
            "type": "shell"
        },
        {
